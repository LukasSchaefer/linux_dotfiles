# screenshot command
bindsym --release $mod+Shift+Ctrl+4 exec scrot -s 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Pictures/screenshots && mv $f ~/Pictures/screenshots && xclip -selection clipboard -t image/png -i ~/Pictures/screenshots/`ls -1 -t ~/Pictures/screenshots | head -1`' # Area selection

# calculate command
bindsym $mod+c exec --no-startup-id LC_NUMERIC=en_US.UTF-8 rofi -show calc -modi calc -no-show-match -no-sort -lines 6 -eh 2 -padding 800 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -font "System San Francisco Display 18"

